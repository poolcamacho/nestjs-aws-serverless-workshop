{
  "name": "aws-serverless-demo",
  "version": "1.0.0",
  "description": "AWS Serverless Demo with NestJS",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "watch": "tsc -w",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "init:dynamodb": "ts-node scripts/init-dynamodb.ts",
    "init:sqs": "ts-node scripts/init-sqs.ts",
    "init:all": "npm run init:dynamodb && npm run init:sqs",
    "prebuild": "npm run clean",
    "predev": "npm run build",
    "dev": "npm run docker:up && sleep 5 && npm run init:all && serverless offline start --stage local",
    "deploy": "npm run build && serverless deploy"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@vendia/serverless-express": "^4.10.4",
    "aws-sdk": "^2.1450.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/aws-lambda": "^8.10.119",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.0",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "prettier": "^3.0.2",
    "serverless": "^3.38.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-offline": "^13.3.3",
    "serverless-plugin-typescript": "^2.1.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
